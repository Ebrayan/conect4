<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borde_rounded2"
    android:padding="10dp"
    android:id="@+id/layoutback"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:text="Ganador"
            android:id="@+id/txtGanador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#779bed"
            android:textSize="22dp"
            android:textStyle="bold"


            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/win"
            app:lottie_fileName="particle_explosion.json"
            android:layout_centerInParent="true"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/animation_view"
            app:lottie_fileName="emoji.json"
            android:layout_centerInParent="true"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            />

        <Button
            android:id="@+id/btnSalirDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/win"
            android:layout_centerHorizontal="true"
            android:text="Volver"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:background="@drawable/btnrounded"
            android:fontFamily="sans-serif"/>
    </RelativeLayout>

